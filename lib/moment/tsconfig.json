{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "module": "es2015",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "types": [],
    "paths": {
      "@mat-datetimepicker/core": [
        "../../dist/lib/core/@mat-datetimepicker/core"
      ],
      "@mat-datetimepicker/moment": [
        "../../dist/lib/moment/@mat-datetimepicker/moment"
      ]
    },
    "typeRoots": [
      "../../node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
